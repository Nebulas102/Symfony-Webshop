{% extends 'base.html.twig' %}

{% block title %}AvailabilityProduct{% endblock %}

{% block body %}
    <h1>AvailabilityProduct</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ availability_product.id }}</td>
            </tr>
            <tr>
                <th>Available</th>
                <td>{{ availability_product.available ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Startdate</th>
                <td>{{ availability_product.startdate ? availability_product.startdate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Enddate</th>
                <td>{{ availability_product.enddate ? availability_product.enddate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('availability_product_index') }}">back to list</a>

    <a href="{{ path('availability_product_edit', {'id': availability_product.id}) }}">edit</a>

