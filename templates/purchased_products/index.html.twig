{% extends 'base.html.twig' %}

{% block title %}PurchasedProducts index{% endblock %}

{% block body %}
    <h1>PurchasedProducts index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Quantity</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for purchased_product in purchased_products %}
            <tr>
                <td>{{ purchased_product.id }}</td>
                <td>{{ purchased_product.quantity }}</td>
                <td>
                    <a href="{{ path('purchased_products_show', {'id': purchased_product.id}) }}">show</a>
                    <a href="{{ path('purchased_products_edit', {'id': purchased_product.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('purchased_products_new') }}">Create new</a>
{% endblock %}
