{% extends 'base.html.twig' %}

{% block title %}Bill index{% endblock %}

{% block body %}
    <h1>Bill index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Purchasedate</th>
                <th>Deliverydate</th>
                <th>Total_price</th>
                <th>Total_quantity</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for bill in bills %}
            <tr>
                <td>{{ bill.id }}</td>
                <td>{{ bill.purchasedate ? bill.purchasedate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ bill.deliverydate ? bill.deliverydate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ bill.totalPrice }}</td>
                <td>{{ bill.totalQuantity }}</td>
                <td>
                    <a href="{{ path('bill_show', {'id': bill.id}) }}">show</a>
                    <a href="{{ path('bill_edit', {'id': bill.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('bill_new') }}">Create new</a>
{% endblock %}
